<div class="container">
  <h1>Sign Up</h1>

  <form id="sign-up" method="post" action="/users">
    <label class="label" for="name">Name</label>
    <input class="name" type="text" name="user[name]" placeholder="e.g., joe" >
    <div class="name-errors"></div>
    <br>

    <label class="label" for="email">Email</label>
    <input class="email" type="email" name="user[email]" placeholder="e.g., me@example.com" >
    <div class="email-errors"></div>

    <!-- SLIM THIS ERROR CODE DOWN? -->
    <!-- DOESN'T WORK -->
    <% if @user.errors %>
      <% @user.errors.each do |attribute, error| %>
        <% if attribute == "email" %>
          <li class="errors"><%= attribute %> <%= error %></li>
        <% end %>
      <% end %>
    <% end %>

    <br>

    <label class="label" for="password">Password</label>
    <input class="password" type="password" name="user[password]" placeholder="6 or more characters">
    <div class="password-errors"></div>
    <br>

    <div class="submit"><input type="submit" value="Sign Up"></div>
  </form>

</div>
